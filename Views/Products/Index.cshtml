@model IEnumerable<ProductModel>

@{
    ViewData["Title"] = "Products Page";
}

<h1>Products</h1>
<p><a asp-action = "Create" class="btn btn-info" role="button">Create New</a></p>

<table class="table">
    <thead>
         <tr>
             <th>
                @Html.DisplayNameFor(model => model.Id)
             </th>
             <th>
                @Html.DisplayNameFor(model => model.Name)
             </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.Description)
             </th>
             <th>
                @Html.DisplayNameFor(model => model.Price)
             </th>
             <th></th>
         </tr>
    </thead>
    <tbody>
       @foreach (var item in Model!)
       {
         <tr>
            <td> @Html.DisplayFor(modelItem => item.Id) </td>
            <td> @Html.DisplayFor(modelItem => item.Name) </td>
            <td> @Html.DisplayFor(modelItem => item.CategoryName) </td>
            <td> @Html.DisplayFor(modelItem => item.Description) </td>
            <td> @Html.DisplayFor(modelItem => item.Price) </td>
            <td class="crud-btn-set">
                    <div class="crud-btn">
                        <a class="btn btn-primary btn-block a_btn" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </div>
                    <div class="crud-btn">
                        <a class="btn btn-info btn-block a_btn" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    </div>
                    <div class="crud-btn">
                        <a class="btn btn-danger btn-block a_btn" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div> 
            </td>
         </tr>
       }
    </tbody>
</table>

